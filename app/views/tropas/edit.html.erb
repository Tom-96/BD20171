<h1>Editing Tropa</h1>

<%= form_for @tropa, url: tropa_path(@tropa) do |f| %>
  <% if @tropa.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@tropa.errors.count, "error") %> prohibited
      this tropa from being saved:</h2>
    <ul>
    <% @tropa.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <div class="field">
    <%= f.label :nombre%>
    <%= f.text_field :nombre, id: :tropa_nombre %>
  </div>

  <div class="field">
    <%= f.label :atk %>
    <%= f.number_field :atk, id: :tropa_atk %>
  </div>

  <div class="field">
    <%= f.label :def %>
    <%= f.number_field :def, id: :tropa_def %>
  </div>
  <div class="field">
    <%= f.label :tipotropa, "Tipo" %>
    <%= f.collection_select(:tipo_tropa_id, @tipoTropas, :id, :nombre) %>
  </div>
  <div class="field">
    <%= f.label :recurso_id, "Recurso" %>
    <%= f.collection_select(:recurso_id, @Recursos, :id, :nombre) %>
  </div>
  <div class="field">
    <%= f.label :cantidad_rec , "Cantidad Recurso" %>
    <%= f.number_field :cantidad_rec, id: :cantidad_rec %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Show', @tropa %> |

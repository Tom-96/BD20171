<p id="notice"><%= notice %></p>

<h1>Tipo Tropas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Bon atk</th>
      <th>Bon def</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_tropas.each do |tipo_tropa| %>
      <tr>
        <td><%= tipo_tropa.nombre %></td>
        <td><%= tipo_tropa.boni_atk %></td>
        <td><%= tipo_tropa.boni_def %></td>
        <td><%= link_to 'Show', tipo_tropa %></td>
        <td><%= link_to 'Edit', edit_tipo_tropa_path(tipo_tropa) %></td>
        <td><%= link_to 'Destroy', tipo_tropa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


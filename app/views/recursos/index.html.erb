<p id="notice"><%= notice %></p>

<h1>Recursos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @recursos.each do |recurso| %>
      <tr>
        <td><%= recurso.nombre %></td>
        <td><%= link_to 'Show', recurso %></td>
        <td><%= link_to 'Edit', edit_recurso_path(recurso) %></td>
        <td><%= link_to 'Destroy', recurso, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar Recurso', new_recurso_path %>

